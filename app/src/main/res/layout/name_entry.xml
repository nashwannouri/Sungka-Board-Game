<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBrown">

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title"/>

        <TextView
            android:id="@+id/playerOneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playerOneText"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/playerOneName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/playerTwoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playerTwoText"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/playerTwoName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startGame"
            android:background="@drawable/submitbutton"
            android:textSize="30dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeButtonName_entry"
        android:background="@drawable/homebutton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="returnHome"/>

</RelativeLayout>